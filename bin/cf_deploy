#!/usr/bin/env ruby
# vim: ft=ruby

require "cf_deployer/cf_deploy"
require "cf_deployer/logger"

cli = CfDeployer::Cli.new(ARGV)

logger = CfDeployer::Logger.new(`tput cols`.to_i)
cf_deploy = CfDeployer::CfDeploy.new(cli.parse!, logger)

begin
  cli.validate!
  cf_deploy.deploy
rescue => e
  logger.log_exception e
  exit 1
end
